# Gangazon Auth Service - Variables de Entorno
# Copiar este archivo a .env.local para desarrollo

# Base de Datos PostgreSQL UNIFICADA
DATABASE_URL=postgresql://user:password@localhost:5432/gangazon_main

# JWT Secrets (GENERAR VALORES ÚNICOS Y SEGUROS)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-same-as-scrapper
JWT_REFRESH_SECRET=your-super-secret-refresh-key-different-from-jwt-secret

# CORS - Orígenes permitidos (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Super Admin - Configuración inicial
SUPER_ADMIN_EMAIL=admin@gangazon.com
SUPER_ADMIN_PASSWORD=change-this-secure-password

# Entorno
NODE_ENV=development
PORT=4000
